{
    "name": "galandas/contodb",
    "type": "phpbb-extension",
    "description": "This Extension will display a countdown when you disable the board all configurable from ACP.",
    "homepage": "http://phpbb3world.altervista.org",
    "version": "1.0.3",
    "time": "2016-12-15",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Galandas",
            "email": "manzarek@live.it",
            "homepage": "http://phpbb3world.altervista.org",
            "role": "Amateur Developer"
        }
    ],
    "require": {
        "php": ">=5.4,<=7.1",
        "phpbb/phpbb": ">=3.1.10,<3.2.0"
    },
    "extra": {
        "display-name": "Countdown Disable Board",
        "soft-require": {
            "phpbb/phpbb": ">=3.1.10,<3.2.0"
        },
        "version-check": {
            "host": "www.phpbb.com",
            "directory": "/customise/db/extension/countdown_disable_board",
            "filename": "version_check"
        }
    }
}